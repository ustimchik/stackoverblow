$('#answer-' + <%= @answer.id %>).find('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');
<% unless @answer.errors.present? %>
  $('.answer-best').html('<%= j render @question.answers.best %>');
  $('.answers').html('<%= j render @question.answers.not_best %>');
  $('.notice').html('<%= j 'Answer was successfully marked the best.' %>');
<% end %>
